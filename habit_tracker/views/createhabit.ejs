<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Habit</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body>
    <h1>Create a New Habit</h1>
    <form action="/v1/habit/create" method="POST">
      <label for="name_habit">Habit Name:</label>
      <input type="text" id="name_habit" name="name_habit" required /><br />

      <label for="description">Description:</label>
      <input type="text" id="description" name="description" required /><br />
      <label for="type_habit">Habit Type:</label>
      <select id="type_habit" name="type_habit" required>
        <% typeHabits.forEach(typeHabit => { %>
          <option value="<%= typeHabit._id %>"><%= typeHabit.value %></option>
        <% }); %>
      </select>
      <br />
        <% typeHabits.forEach(habittype => { %>
        <option value="<%= habittype._id %>"><%= habittype.value %></option>
        <% }); %></select
      ><br />

      <label for="goal_target">Goal</label>
      <input type="number" id="goal_target" name="goal_target" required /><br />

      <label for="unit">Unit:</label>
      <input type="text" id="unit" name="unit" required /><br />

      <label for="goal_period">Goal Period:</label>
      <select id="goal_period" name="goal_period" required>
        <% goalPeriods.forEach(period => { %>
        <option value="<%= period._id %>"><%= period.value %></option>
        <% }); %></select
      ><br />

      <label for="start_day">Start Day:</label>
      <input type="date" id="start_day" name="start_day" required /><br />

      <label for="end_day">End Day:</label>
      <input type="date" id="end_day" name="end_day" /><br />

      <button type="submit">Create Habit</button>
    </form>
    
  </body>
</html>
