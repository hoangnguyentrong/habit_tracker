<!DOCTYPE html>
<html>
<head>
  <title>Create Habit</title>
</head>
<body>
  <h1>Create a New Habit</h1>
  <form action="/v1/habit/create" method="POST">
    <div>
      <label for="name">Habit Name:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div>
      <label for="description">Description:</label>
      <input type="text" id="description" name="description" required>
    </div>
    <div>
      <label for="type">Type:</label>
      <select id="type" name="type" required>
        <% habitTypes.forEach(type => { %>
          <option value="<%= type._id %>"><%= type.type %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label for="unit">Unit:</label>
      <input type="text" id="unit" name="unit" required>
    </div>
    <div>
      <label for="goalTarget">Goal Target:</label>
      <input type="number" id="goalTarget" name="goalTarget" required>
    </div>
    <div>
      <label for="period">Period:</label>
      <select id="period" name="period" required>
        <% habitPeriods.forEach(period => { %>
          <option value="<%= period._id %>"><%= period.period %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label for="startDate">Start Date:</label>
      <input type="date" id="startDate" name="startDate" required>
    </div>
    <div>
      <label for="endDate">End Date (optional):</label>
      <input type="date" id="endDate" name="endDate">
    </div>
