<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <form action="/v1/habit/editHabit?habit_id=<%= habit._id %>" method="POST">
    <div>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="<%= habit.name %>" required maxlength="255">
    </div>
    <div>
      <label for="description">Description:</label>
      <textarea id="description" name="description" required maxlength="255"><%= habit.description %></textarea>
    </div>
    
    <div>
      <label for="type">Type:</label>
      <input type="text" id="type" name="type" value="<%= habit.type %>" required>
    </div>
    
    <div>
      <label for="unit">Unit:</label>
      <input type="text" id="unit" name="unit" value="<%= habit.unit %>" required maxlength="50">
    </div>
    
    <div>
      <label for="goalTarget">Goal Target:</label>
      <input type="number" id="goalTarget" name="goalTarget" value="<%= habit.goalTarget %>" required>
    </div>
    
    <div>
      <label for="period">Period:</label>
      <input type="text" id="period" name="period" value="<%= habit.period %>" required>
    </div>
    <div>
      <label for="startDate">Start Date:</label>
      <input type="date" id="startDate" name="startDate" value="<%= habit.startDate.toISOString().split('T')[0] %>" required>
    </div>
    
    <div>
      <label for="endDate">End Date:</label>
      <input type="date" id="endDate" name="endDate" value="<%= habit.endDate ? habit.endDate.toISOString().split('T')[0] : '' %>">
    </div>
    <button type="submit">Save Changes</button>
    <button type="button" onclick="window.location.href = '/v1/home'">Cancel</button>
  </form>
</body>
</html>