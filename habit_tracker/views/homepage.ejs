<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <table>
    <thead>
      <th>Name</th>
      <th>Goal Target</th>
      <th>Unit</th>
      <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i></th>
      <th>Option</th>
    </thead>
    <tbody>
      <%habits.forEach(habit => {%>
      <tr>
        <td><%= habit.name%></td>
        <td><%= habit.goalTarget%></td>
        <td><%= habit.unit%></td>
        <td>
          <% habit.occurrences.forEach(occurrence => { %>
            <div><%= occurrence.date.toDateString() %>: <%= occurrence.status %></div>
          <% }); %>
        </td>
        <td>
          <!-- <button onclick="window.location.href = '/v1/goal_target?habit_id=<%= habit._id.toString() %>'">Create Habit</button> -->
          <button onclick="window.location.href = '/v1/habit/updateProgress?habit_id=<%= habit._id %>'">Update Progress</button>
        </td>
      </tr>
      <%});%>
    </tbody>
  </table>
  <button onclick="window.location.href = '/v1/habit/create'">Create Habit</button>
 

</body>
</html>